<div class="text-center mt-4 mb-4">

    <h3><%= gettext("Start Now") %></h3>

    <div class="mt-4 mb-4">
        <%= if @current_user do %>
        <%= link gettext("Customize Your Channel"), to: Routes.user_settings_path(@conn, :stream), class: "btn btn-primary btn-lg mx-4" %>
        <% else %>
        <%= link gettext("Register Your Account"), to: Routes.user_registration_path(@conn, :new), class: "btn btn-primary btn-lg mx-4" %>
        <%= link gettext("Login"), to: Routes.user_session_path(@conn, :new), class: "btn btn-primary btn-lg mx-4" %>
        <% end %>
    </div>

</div>
